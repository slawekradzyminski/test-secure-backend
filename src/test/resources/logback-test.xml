<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Keep test output minimal: only warnings/errors from application code -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

